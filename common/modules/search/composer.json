{
  "name": "backend/search",
  "description": "Site search",
  "keywords": ["yii2", "yii2-search", "search", "live search", "wdmg"],
  "type": "yii2-extension",
  "license": "MIT",
  "version": "1.1.4",
  "homepage": "https://github.com/wdmg/yii2-search",
  "support": {
    "source": "https://github.com/wdmg/yii2-search",
    "issues": "https://github.com/wdmg/yii2-search/issues"
  },
  "authors": [
    {
      "name": "Alexsander Vyshnyvetskyy",
      "email": "alex.vyshnyvetskyy@gmail.com"
    },
    {
      "name": "W.D.M.Group, Ukraine",
      "email": "wdmg.com.ua@gmail.com"
    }
  ],
  "require": {
    "yiisoft/yii2": "^2.0.40",
    "common/modules/base": "^1.2.4",
    "common/modules/helpers": "^1.3.2",
    "common/modules/selectinput": "^1.0.9",
    "common/modules/validators": "^1.0.6",
    "wdmg/lingua-stem": "^1.0.1",
    "wdmg/phpmorphy": "^1.3.2"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "common\\modules\\search\\": ""
    }
  },
  "extra": {
    "options": {
      "routePrefix": "admin",
      "supportModels": {
        "news": {
          "class": "common\\modules\\news\\models\\News",
          "indexing": {
            "on_insert": true,
            "on_update": true,
            "on_delete": true
          },
          "options": {
            "title": "title",
            "url": "url",
            "fields": [
              "title",
              "keywords",
              "description",
              "content"
            ],
            "conditions": {
              "status": 1
            }
          }
        },
        "blog": {
          "class": "common\\modules\\blog\\models\\Posts",
          "indexing": {
            "on_insert": true,
            "on_update": true,
            "on_delete": true
          },
          "options": {
            "title": "title",
            "url": "url",
            "fields": [
              "title",
              "keywords",
              "description",
              "content"
            ],
            "conditions": {
              "status": 1
            }
          }
        },
        "pages": {
          "class": "common\\modules\\pages\\models\\Pages",
          "indexing": {
            "on_insert": true,
            "on_update": true,
            "on_delete": true
          },
          "options": {
            "title": "title",
            "url": "url",
            "fields": [
              "title",
              "keywords",
              "description",
              "content"
            ],
            "conditions": {
              "status": 1
            }
          }
        }
      },
      "cacheExpire": 86400,
      "indexingOptions": {
        "processing": "phpmorphy",
        "analyze_by": "relevance",
        "max_execution_time": 0,
        "memory_limit": null,
        "max_words": 50
      },
      "analyzerOptions": {
        "min_length": 3,
        "stop_words": [],
        "weights": []
      },
      "snippetOptions": {
        "max_words_before": 6,
        "max_words_after": 4,
        "bolder_tag": "strong",
        "max_length": 255,
        "delimiter": "â€¦"
      },
      "searchAccuracy": 90
    }
  }
}